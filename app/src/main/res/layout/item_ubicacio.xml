<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/historial_icon"
        android:layout_width="90dp"
        android:layout_height="86dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_historial_50x50" />

    <TextView
        android:id="@+id/nom_ubicacio"
        android:layout_width="247dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="Ubicacio"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/historial_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="49dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/nom_ubicacio"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>