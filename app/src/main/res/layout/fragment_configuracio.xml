<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.ConfiguracioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="0.8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/btnCancel" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.5">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:foregroundGravity="right"
                    android:gravity="right"
                    android:text="@string/btnSave"
                    android:textColorHighlight="#4CAF50"
                    app:iconTint="#FFEB3B" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.26"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="@string/titleConfiguration"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlePassword"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="#B4B6C5"
                android:text="@string/titlePassword" />

            <TextView
                android:id="@+id/nameOldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nameOldPassword"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editOldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escriu la antiga contrasenya"
                android:inputType="textPassword"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/nameNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nameNewPassword"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escriu la nova contrasenya"
                android:inputType="textPassword"
                android:minHeight="48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleEmail"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#B4B6C5"
                android:text="@string/titleEmail" />

            <TextView
                android:id="@+id/nameOldEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nameOldEmail"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editOldEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escriu l'antic correu"
                android:inputType="textEmailAddress"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/nameNewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nameNewEmail"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editNewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escriu el nou correu"
                android:inputType="textEmailAddress"
                android:minHeight="48dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


